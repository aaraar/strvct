extends layouts/main-layout

block content
  main.nest-background
    .background
    header.upload
      h1
        span STR
        span V
        span CT
    .container
      section.menu.active
        h2 Welcome to STRVCT
        p Login to start working with your current dataset
        form(class='login' action='/' method='GET')
          label Username
            input(type='text' name='username')
          label Password
            input(type='password' name='password')
        details
          summary prototype options
          form(class='upload' action='/data/upload' method='POST' enctype='multipart/form-data')
            input(type='file' accept='.ttl, .nt' id='dataset' name='dataset' required)
            button Upload
